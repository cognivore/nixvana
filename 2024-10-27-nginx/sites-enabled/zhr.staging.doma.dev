server {

	root /var/www/zhr.staging.doma.dev/public/;

	# Add index.php to the list if you are using PHP
	index index.html;

	server_name zhr.staging.doma.dev;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}

	error_page 404 /404.html;

	if ($request_uri ~ ^(.*/)index(?:\.html)?$) {
		return 301 $1;
	}


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/zhr.staging.doma.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/zhr.staging.doma.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = zhr.staging.doma.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



	server_name zhr.staging.doma.dev;
	listen 80;
    return 404; # managed by Certbot


}
